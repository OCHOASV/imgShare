<div class="container p-4">
	<div class="row">
		<div class="col-md-4 mx-auto">
			<div class="card text-center">
				<div class="card-header">
					<h3>SingUp</h3>
				</div>
				<div class="card-body">
					<form action="/singup" method="POST">
						<div class="form-group">
							<input type="text" name="nick" id="nick" placeholder="Usuario" class="form-control" autofocus>
						</div>
						<div class="form-group">
							<input type="text" name="nombre" id="nombre" placeholder="Nombre Completo" class="form-control">
						</div>
						<div class="form-group">
							<input type="password" name="password" id="password" placeholder="password" class="form-control">
						</div>
						<div class="form-group">
							<button type="submit" class="btn btn-danger active btn-block">
								SingUp
							</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>