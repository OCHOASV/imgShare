<div class="container p-4">
	<div class="row">
		<div class="col-md-4 mx-auto">
			<div class="card text-center">
				<div class="card-header">
					<h3>SingIn</h3>
				</div>
				<div class="card-body">
					<form action="/singin" method="POST">
						<img src="/public/img/logo.png" alt="Logo" class="card-img-top mx-auto m-2 img-thumbnail w-50 bg-dark">
						<div class="form-group mt-2">
							<input type="text" name="nick" id="nick" placeholder="Usuario" class="form-control" autofocus>
						</div>
						<div class="form-group">
							<input type="password" name="password" id="password" placeholder="password" class="form-control">
						</div>
						<div class="form-group">
							<button type="submit" class="btn btn-danger active btn-block">
								SingIn
							</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>