{{#if sidebar.comments}}
	<div class="card mt-2">
		<div class="card-header bg-dark text-white">
			<h5><i class="fa fa-comments"></i> Ultimos comentarios</h5>
		</div>
		<div class="card-body">
			{{#each sidebar.comments}}
				<div class="row">
					<div class="col">
						<a href="/images/{{image.uniqueID}}">
							<img src="/public/upload/{{image.filename}}" alt="{{image.description}}" title="{{image.description}} || {{image.views}} vistas || {{image.likes}} likes" class="w-70 img-thumbnail">
						</a>
					</div>
					<div class="col">
						<blockquote class="w-100">
							<p>{{comment}}</p>
							<footer class="blockquote-footer">
								<span>{{name}}</span> - <span>{{timeago recordate}}</span>
							</footer>
						</blockquote>
					</div>
				</div>
			{{/each}}
		</div>
	</div>
{{/if}}